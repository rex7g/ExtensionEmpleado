@model ExtensionEmpleado.Models.Empleado



<div class="row" style="width:100%;">
    <div class="col-6">
        <h2 class="text-primary">Lista de Empleados</h2>
    </div>

</div>


<div class="p-4 border rounded bg-light">
    <table id="tblData" class="table table-bordered table-responsive-xl" style="width:95%;">
        <div class="col-4 text-right">
        <button type="button" onclick="limpiar()" class="btn btn-info form-control" data-toggle="modal" data-target="#modal">Agendar Empleado </button>
    </div>
    <hr />
        <thead class="thead-light">
            <tr class="table-info">
                <th>Nombres</th>
                <th>Extension</th>
                <th>Departamento</th>
                <th>Correo</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>



<div class="modal fade" id="modal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h2 class="modal-title text-primary text-center">Ingreso de Clientes</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding-left:15%; padding-right:15%;padding-bottom:30px">
                        <div class="row p-3 border-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <input type="hidden" id="empleadoid" asp-for="EmpleadoId"/>
                        <div class="form-row" style="padding-top:14px;">
                            <div class="form-group col-md-6">
                                <label>Nombres</label>
                                <input asp-for="Nombre" id="Nombre" class="form-control" placeholder="Nombres" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Apellidos</label>
                                <input asp-for="Extension" id="Extension" class="form-control" placeholder="Extension" />
                                <span asp-validation-for="Extension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Direccion</label>
                            <input asp-for="Departamento" id="Departamento" class="form-control" placeholder="Departamento" />
                            <span asp-validation-for="Departamento" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Telefono</label>
                                <input asp-for="Correo" id="Correo" class="form-control" placeholder="Telefono" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                        </div>
                      
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial"/>

  <script src="~/js/empleado.js"></script>
}